<description xmlns="http://riddl.org/ns/description/1.0" xmlns:ann="http://riddl.org/ns/annotation/1.0" xmlns:xi="http://www.w3.org/2001/XInclude" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <message name="message">
    <parameter name="id" type="string"/>
    <parameter name="message" type="string"/>
    <parameter name="timeout" type="positiveInteger"/>
  </message>

  <message name="criteria">
    <parameter name="id" type="string"/>
    <parameter name="timeout" type="positiveInteger"/>
  </message>
  <message name="criteria_del">
    <parameter name="id" type="string"/>
  </message>

  <resource>
    <resource relative="push">
      <post in="message"/>
    </resource>
    <resource relative="fetch">
      <get in="criteria"/>
      <delete in="criteria_del"/>
    </resource>
  </resource>
</description>
